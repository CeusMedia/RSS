      "role": "Developer"
    }
  ],
  "support": {
    "email": "office@ceusmedia.de",
    "jabber": "cwuerker@ceusmedia.de"
  },
  "require": {
    "php": "^7.4 | ^8.1",
    "ceus-media/common": "^1.0 | 1.0.x-dev | ^0.9 | 0.9.x-dev",
    "ext-dom": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "ceus-media/doc-creator": "^0.9",
    "phpstan/phpstan": "^1",
    "phpstan/phpstan-strict-rules": "^1",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "rector/rector": "*"
  },
  "autoload": {
    "psr-4": {
      "CeusMedia\\RSS\\": ["src/"],
      "CeusMedia\\RSSTest\\": ["test/"]
    }
  },
  "scripts": {
    "dev:index-json": [
      "@dev:install",
      "XDEBUG_MODE=off php vendor/ceus-media/hydrogen-source-indexer/index.php json"
    ],
    "dev:index-json-humanreadable": [
      "@dev:install",
      "XDEBUG_MODE=off php vendor/ceus-media/hydrogen-source-indexer/index.php json-dev"
    ],
    "dev:index-html": [
      "@dev:install",
      "XDEBUG_MODE=off php vendor/ceus-media/hydrogen-source-indexer/index.php html"
    ],
    "dev:index-serial": [
      "@dev:install",
      "XDEBUG_MODE=off php vendor/ceus-media/hydrogen-source-indexer/index.php serial"
    ],
    "dev:install": "composer install --dev --quiet",
    "dev:rector": [
      "@dev:install",
      "vendor/bin/rector process --config=rector.php --dry-run"
    ],
    "dev:rector-fix": [
      "@dev:install",
      "vendor/bin/rector process --config=tool/config/rector.php"
    ],
    "dev:stan": [
      "@dev:install",
      "XDEBUG_MODE=off vendor/bin/phpstan analyze --configuration=phpstan.neon --memory-limit=1G --verbose"
    ],
    "dev:stan-clear": [
      "@dev:install",
      "XDEBUG_MODE=off vendor/bin/phpstan clear-result-cache --verbose"
    ],
    "dev:stan-save": [
      "@dev:install",
      "XDEBUG_MODE=off vendor/bin/phpstan analyse --configuration phpstan.neon --generate-baseline phpstan-baseline.neon --verbose"
    ],
    "dev:test-syntax": [
      "@dev:install",
      "vendor/bin/parallel-lint . -j 10 --colors --exclude vendor"
    ],
    "dev:test-units": [
      "@dev:install",
      "php vendor/bin/phpunit --configuration tool/config/phpunit9.xml --testsuite units"
    ],
    "dev:update": "composer update --dev",
    "incomplete:dev:create-docs": [
      "@dev:install",
      "php vendor/ceus-media/doc-creator/doc-creator.php --config-file=tool/config/doc-creator.xml"
    ]
  },
  "scripts-descriptions": {
    "dev:index-json": "Create library index as compact JSON (to speed up Hymn)",
    "dev:install": "Installs project dependencies for Development stage quietly",
    "dev:index-json-humanreadable": "Create library index as readable JSON",
    "dev:index-html": "Create library index as HTML",
    "dev:index-serial": "Create library index as PHP serial",
    "dev:rector": "Shows suggestions of configured Rector rules",
    "dev:rector-fix": "Apply currently configured Rector rules to codebase",
    "dev:stan": "Validate codebase with PHPStan",
    "dev:stan-clear": "Clear PHPStan cache",
    "dev:stan-save": "Store current results in ignore list",
    "dev:test-syntax": "Validate code base syntax using PHP linter",
    "dev:test-units": "Run unit tests",
    "dev:update": "Updates project dependencies for Development stage quietly"
  }
}
